@using WebShopNoUsers.Models
@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer
@model WebShopNoUsers.ViewModels.ShoppingCartViewModel

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>@Localizer["Product"]</th>
            <th>@Localizer[ "Quantity"]</th>
            <th>@Localizer[ "Price"]</th>
            <th>@Localizer[ "Remove"]</th>
        </tr>
    </thead>
    <tbody>
        @foreach( var item in Model.Carts ) {
        <tr>
            <td>@item.Product.Translations.FirstOrDefault( x => x.Language == Model.CurrentLanguage ).ProductName</td>
            <td>@item.Count</td>
            <td>@item.Product.Translations.FirstOrDefault( x => x.Language == Model.CurrentLanguage ).ProductPrice</td>
            <td><a class="text-danger" asp-controller="ShoppingCart" asp-action="RemoveFromCart" asp-route-id="@item.ItemId">@Localizer[ "Remove" ]</a></td>
        </tr>
    }
    </tbody>
    <tfoot>
        <tr>
            <td></td>
            <td></td>
            <td>Total:</td>
            <td>@Model.CartTotal</td>
        </tr>
    </tfoot>
</table>
<a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="Checkout">@Localizer["Buy"]</a>