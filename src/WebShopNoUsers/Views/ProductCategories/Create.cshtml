@model WebShopNoUsers.Models.ProductCategory

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-lg-12">
        <div class="well">
            <form asp-action="Create" class="form-horizontal">
                <fieldset>
                    <legend>Create a category</legend>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="ProductCategoryName" class="col-lg-2 control-label"></label>
                        <div class="col-lg-10">
                            <input asp-for="ProductCategoryName" class="form-control" />
                            <span asp-validation-for="ProductCategoryName" class="text-danger" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <input type="submit" value="Create" class="btn btn-default" />
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
