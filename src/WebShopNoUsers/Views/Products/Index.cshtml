@model IEnumerable<WebShopNoUsers.ViewModels.ProductViewModel>

@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "Index";
}


<div class="row">
    <div class="col-lg-2">
        <h2>@Localizer["Overview"]</h2>
    </div>
</div>
<div class="row">
    @foreach( var item in Model ) {
        <div class="col-md-3">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h4>@Html.DisplayFor( modelItem => item.ProductName )</h4>
                </div>
                <div class="panel-body">
                    <img src="http://dummyimage.com/200/334455/fff.png" class="img-thumbnail center-block" />
                    <h4>@Html.DisplayNameFor( model => model.ProductPrice ): @Html.DisplayFor( modelItem => item.ProductPrice )</h4>
                    <h4>@Html.DisplayNameFor( model => model.ProductDescription ): @Html.DisplayFor( modelItem => item.ProductDescription)</h4>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.ProductId">@Localizer[ "Edit" ]</a>
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.ProductId">@Localizer[ "Details" ]</a>
                    <a class="btn btn-warning" asp-action="Delete" asp-route-id="@item.ProductId">@Localizer[ "Delete" ]</a>
                </div>
            </div>
        </div>
    }
</div>
<div class="row">
    <div class="col-md-3">
        <a class="btn btn-primary btn-lg" asp-action="Create">@Localizer[ "Create New" ]</a>
    </div>
</div>